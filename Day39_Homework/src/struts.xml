<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="homework" extends="struts-default">
        <result-types>
            <result-type name="codeImg" class="util.CodeResult"/>
        </result-types>
        <action name="register" class="user.action.UserAction" method="register">
            <result name="success" type="redirect">login.jsp</result>
            <result name="error">register.jsp</result>
        </action>
        <action name="login" class="user.action.UserAction" method="login">
            <result name="success" type="redirect">index.jsp</result>
            <result name="error">login.jsp</result>
        </action>

        <action name="code" class="user.action.UserAction" method="codeImg">
            <result name="success" type="codeImg">
            </result>
        </action>
    </package>
</struts>