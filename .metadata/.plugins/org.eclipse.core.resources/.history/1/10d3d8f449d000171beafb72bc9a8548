
public class TenMoney {
	public static void main(String[] args) {
		long money = 1000000000;
		System.out.println(money);
		// i即为天数
		for (int i = 1; money != 0; i++) {
			money /=2;
			System.out.println("第"+i+"天花了"+money+"元");
		}
		
		
		
		System.out.println("********************");
		System.out.println("  ***     JAVA     ***");
		System.out.println("    ********************");
	}
}
